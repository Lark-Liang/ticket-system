# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ticket_system
DB_USER=ticket_user
DB_PASSWORD=YourStrongPassword123!

# JWT配置
JWT_SECRET=your-very-strong-secret-key-at-least-32-characters-long

# 服务端口
SERVER_PORT=8080
APP_ENV=development

# 邮件配置（可选，用于发送通知）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Redis配置（可选，用于缓存和分布式锁）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=./logs